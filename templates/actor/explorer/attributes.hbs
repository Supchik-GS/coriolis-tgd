<div class="attributes">
  {{#each config.Attributes.list as | attribute |}}
  <label class="{{attribute}} rollable attribute-label draggable" data-action="roll" data-roll-type="attribute"
    data-value="{{attribute}}">{{localize (concat "CORIOLIS_TGD.Actor.base.FIELDS.attributes." attribute ".label")}}</label>
  <input class="attribute-field" name="system.attributes.{{attribute}}" type="number" min="2" max="6"
    data-value="{{attribute}}" value="{{get ../system.attributes attribute}}" onfocus="this.select();" {{disabled ../system.playMode}} />
  {{/each}}
  {{#each statusEffects }}
  {{#unless (eq this.id "dead") }}
  <img class="condition rollable" src="systems/coriolis-tgd/assets/frames/dot-{{ifThen (has ../actor.statuses this.id) "filled" "empty" }}.svg" data-action="toggleStatusEffect" data-value="{{this.id}}">
  {{/unless}}
  {{/each}}
  <svg viewBox="0 0 310 310" style="width: 98%; height: 98%;">
    <g id="ELEMENTOS">
      <path id="pathDazed"
        d="M199.36 49.92C199.65 48.18 200.25 46.47 201.18 44.85 205.35 37.64 214.57 35.16 221.79 39.33 229 43.5 231.48 52.72 227.31 59.94 226.14 61.96 224.57 63.61 222.76 64.85" />
