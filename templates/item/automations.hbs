<section class='tab automations scrollable {{tab.cssClass}}' data-group='primary' data-tab='automations'>

  <div class="form-group cgd-custom">
    <label>
      <a class='automation-create' data-action='createAutomation' data-origin="{{@root.item.uuid}}">
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='Automation'}}
      </a>
    </label>
  </div>

  {{#each system.automations as | automation |}}
  <div class="border" data-automation-id="{{@key}}">

    <label for="system.automations.{{@key}}.type">{{ localize (concat "CORIOLIS_TGD.Automation.Type." automation.type) }}</label>
    <div class="form-group cgd-custom">
      <label for="system.automations.{{@key}}.name">{{localize "Name"}}</label>
      <div class="form-fields">
        <input type="text" name="system.automations.{{@key}}.name" value="{{automation.name}}">
      </div>
    </div>
    <div class="form-group cgd-custom">
      <label for="system.automations.{{@key}}.showAsSelection">{{localize
        "CORIOLIS_TGD.Automation.FIELDS.showAsSelection.label"}}</label>
      <input type="checkbox" name="system.automations.{{@key}}.showAsSelection" {{checked
        automation.showAsSelection}} />
    </div>

    {{> (concat "systems/coriolis-tgd/templates/item/automation-parts/" automation.type ".hbs") automation=automation key=@key}}
    <div class="form-group cgd-custom">
      <label style="position: absolute; top:5px; right: 10px">
        <a class='effect-control' data-action='deleteAutomation' data-tooltip='{{localize "DOCUMENT.Delete" type='
          Automation'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </label>
    </div>
  </div>
  {{/each}}
</section>