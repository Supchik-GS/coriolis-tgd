      <path id="pathAttributes"
        d="M98.91,165.03c-.58-3.26-.88-6.63-.88-10.06,0-31.48,25.52-57,57-57s57,25.52,57,57c0,3.28-.28,6.5-.81,9.63" />
    </g>
    <text class="attributes" text-anchor="middle" dominant-baseline="middle">
      <textPath href="#pathAttributes" startOffset="50%">
        &nbsp;{{localize "CORIOLIS_TGD.Actor.base.FIELDS.attributes.label"}}
      </textPath>
    </text>
    <text text-anchor="middle">
      <textPath href="#pathExhausted" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.exhausted.label"}}
      </textPath>
    </text>
    <text text-anchor="middle">
      <textPath href="#pathDazed" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.dazed.label"}}
      </textPath>
    </text>
    <text text-anchor="middle" dominant-baseline="hanging">
      <textPath href="#pathShaken" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.shaken.label"}}
      </textPath>
    </text>
    <text text-anchor="middle" dominant-baseline="hanging">
      <textPath href="#pathDistracted" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.distracted.label"}}
      </textPath>
    </text>
    <text text-anchor="middle" dominant-baseline="hanging">
      <textPath href="#pathConfused" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.confused.label"}}
      </textPath>
    </text>
    <text text-anchor="middle" dominant-baseline="hanging">
      <textPath href="#pathDisheartened" startOffset="50%">
        {{localize "CORIOLIS_TGD.Actor.base.FIELDS.conditions.disheartened.label"}}
      </textPath>
    </text>
  </svg>
</div>