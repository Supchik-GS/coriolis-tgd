<li class="chat-message message flexcol {{cssClass}}"
    data-message-id="{{message._id}}" {{#if borderColor}}style="border-color:{{borderColor}}" {{/if}}>
    <header class="message-header flexrow">
        <span class="message-metadata">
            <time class="message-timestamp">{{timeSince message.timestamp}}</time>
            {{#if canDelete}}
            <a aria-label="{{localize 'Delete'}}" class="message-delete" data-action="deleteMessage">
                <i class="fa-solid fa-trash" inert></i>
            </a>
            {{/if}}
            {{#if canClose}}
            <a aria-label="{{ localize " CHAT.Dismiss" }}" class="message-dismiss" data-action="dismissMessage">
                <i class="fa-solid fa-xmark" inert></i>
            </a>
            {{/if}}
        </span>
        <h4 class="message-sender">{{alias}}</h4>
        <div class="top-banner">
            <img class="banner" src="systems/coriolis-tgd/assets/chat/top.webp" />
            {{#if speakerActor}}
            <img class="avatar" src="{{speakerActor.img}}" />
            {{/if}}
        </div>


        {{#if isWhisper}}
        <span class="whisper-to">{{localize 'CHAT.To'}}: {{whisperTo}}</span>
        {{/if}}


        {{#if message.flavor}}
        <h4 class="flavor-text"><span class="padder left">&nbsp;</span><span
                class="padder right">&nbsp;</span>{{{message.flavor}}}</h4>
        {{/if}}
    </header>
    <div class="message-content">
        {{{message.content}}}
    </div>
    <img class="bottom" src="systems/coriolis-tgd/assets/chat/bottom.webp" />
</li>