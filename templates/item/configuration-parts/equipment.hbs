<section class='tab configuration scrollable {{tab.cssClass}}' data-group='primary' data-tab='configuration'>
  <div>
    {{formGroup systemFields.bonus value=system.bonus type="number" classes="cgd-custom"}}
    {{formGroup systemFields.maxBonus value=system.maxBonus type="number" classes="cgd-custom"}}
    {{formGroup systemFields.weight choices=config.Equipment.weightChoices value=system.weight localize=true
    valueAttr="value" labelAttr="label" classes="cgd-custom"}}
    {{formGroup systemFields.cost value=system.cost classes="cgd-custom"}}
    {{formGroup systemFields.quantity value=system.quantity classes="cgd-custom" hidden=(not isEmbedded)}}
    {{formGroup systemFields.consumable value=system.consumable classes="cgd-custom"}}
    {{formGroup systemFields.deleteWhenZero value=system.deleteWhenZero classes="cgd-custom" hidden=(not system.consumable)}}
    {{formGroup systemFields.supplyConsumed value=system.supplyConsumed classes="cgd-custom"}}
    {{formGroup systemFields.tech value=system.tech localize=true
    classes="cgd-custom"}}
  </div>
</section>