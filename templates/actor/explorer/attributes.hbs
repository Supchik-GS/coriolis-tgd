        d="M86.26,245.88c-1.4,1.13-2.61,2.53-3.56,4.18-4.17,7.22-1.69,16.44,5.52,20.61,7.22,4.17,16.44,1.69,20.61-5.52.95-1.64,1.55-3.38,1.83-5.14" />
      <path id="pathExhausted"
        d="M87.25 64.85C85.44 63.62 83.87 61.97 82.7 59.94 78.53 52.72 81 43.5 88.22 39.33 95.44 35.16 104.66 37.63 108.83 44.85 109.76 46.47 110.36 48.18 110.65 49.92" />
      <path id="pathDistracted"
        d="M199.34,260.01c.28,1.76.89,3.5,1.83,5.14,4.17,7.22,13.39,9.69,20.61,5.52,7.22-4.17,9.69-13.39,5.52-20.61-.95-1.65-2.17-3.05-3.57-4.18" />
      <path id="pathConfused"
        d="M268.18,169.13c1.65.62,3.43.96,5.3.96,8.33,0,15.09-6.75,15.09-15.09s-6.75-15.09-15.09-15.09c-1.83,0-3.58.32-5.19.92" />
